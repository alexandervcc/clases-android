<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragmentos"
        android:padding="15dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnFragm1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fragmento 1"/>
        <Button
            android:id="@+id/btnFragm2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fragmento 2"/>

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="owl.knows.actividadesyciclodevida.fragments.Frag1Fragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="owl.knows.actividadesyciclodevida.fragments.Frag2Fragment"
        android:layout_width="match_parent"
        android:layout_height="300dp" />


</LinearLayout>